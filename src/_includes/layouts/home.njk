{% extends "layouts/base.njk" %} 

{% block content %}
<article class="intro">
  <div class="[ intro__header ]">
    <p class="[ intro__heading ] [ weight-normal text-400 md:text-600 ]">
      <em class="text-800 md:text-900 lg:text-major weight-bold">{{ intro.primary }}</em>
    </p>
  </div>
  <div class="[ intro__content ] [ flow ]">
    <p class="intro__summary">{{ intro.secondary }}</p>
    <p class="intro__summary">{{ intro.summary }}</p>
  </div>
</article>
{% endblock %}